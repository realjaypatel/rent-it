        <main>
            <article class="article">

                <!-- 
        - #HERO
      -->








                <section class="section about" aria-label="about">
                    <div class="singlePage container">
                        <div class="details">
                            <div class="wrapper">
                                <div class="slider">
                                    <div class="bigImage">
                                      <img src="/uploads/<%= post.images[0] %>" alt="" onclick="setImageIndex(0)" />
                                    </div>
                                    <div class="smallImages">
                                      <% post.images.slice(1).forEach((image, index) => { %>
                                        <img src="/uploads/<%= image %>" alt="" key="<%= index %>"  />
                                      <% }) %>
                                    </div>
                                  </div>

                                <div class="info">
                                    <div class="top">
                                        <div class="post">
                                            <h1 >
                                                <%= post.title %>
                                            </h1>
                                            <div class="address">
                                                <ion-icon name="location-outline"></ion-icon>
                                                <span>
                                                    <%= post.address %>
                                                </span>
                                            </div>
                                            <div class="price">$ <%= post.price %>
                                            </div>
                                        </div>
                                        <div class="user">
                                            <img src="/uploads/<%= post.user.avatar %>" alt="">
                                            <span>
                                                <%= post.user.username %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="bottom">
                                        <%= post.desc %>
                                            <!-- Assuming postDetail.desc is already sanitized -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="features">
                            <div class="wrapper">
                                <p class="title">General</p>
                                <div class="listVertical">
                                    <% if (post.utilities==="owner" ) { %>
                                        <div class="feature">
                                            <ion-icon name="hammer-outline"></ion-icon>
                                            <div class="featureText">
                                                <span>Utilities</span>
                                                <p>Owner is responsible</p>
                                            </div>
                                        </div>
                                        <% } else { %>
                                            <div class="feature">
                                                <ion-icon name="hammer-outline"></ion-icon>
                                                <div class="featureText">
                                                    <span>Utilities</span>
                                                    <p>Tenant is responsible</p>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% if (post.pet==="allowed" ) { %>
                                                    <div class="feature">
                                                        <ion-icon name="logo-octocat"></ion-icon>
                                                        <div class="featureText">
                                                            <span>Pet Policy</span>
                                                            <p>Pets Allowed</p>
                                                        </div>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="feature">
                                                            <ion-icon name="logo-octocat"></ion-icon>
                                                            <div class="featureText">
                                                                <span>Pet Policy</span>
                                                                <p>Pets not Allowed</p>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                            <div class="feature">
                                                                <ion-icon name="wallet-outline"></ion-icon>
                                                                <div class="featureText">
                                                                    <span>Income Policy</span>
                                                                    <p>
                                                                        <%= post.income %>
                                                                    </p>
                                                                </div>
                                                            </div>
                                </div>
                                <p class="title">Sizes</p>
                                <div class="sizes">
                                    <div class="size">
                                        <ion-icon name="wallet-outline"></ion-icon>
                                        <span>
                                            <%= post.size %> sqft
                                        </span>
                                    </div>
                                    <div class="size">
                                        <ion-icon name="bed-outline"></ion-icon>
                                        <span>
                                            <%= post.bedroom %> beds
                                        </span>
                                    </div>
                                    <div class="size">
                                        <ion-icon name="water-outline"></ion-icon>
                                        <span>
                                            <%= post.bathroom %> bathroom
                                        </span>
                                    </div>
                                </div>
                                <p class="title">Nearby Places</p>
                                <div class="listHorizontal">
                                    <div class="feature">
                                        <ion-icon name="school-outline"></ion-icon>
                                        <div class="featureText">
                                            <span>School</span>
                                            <p>
                                                <% if (post.school> 999) { %>
                                                    <%= post.school / 1000 %> km
                                                        <% } else { %>
                                                            <%= post.school %> m
                                                                <% } %>
                                                                    away
                                            </p>
                                        </div>
                                    </div>
                                    <div class="feature">
                                        <ion-icon name="logo-octocat"></ion-icon>
                                        <div class="featureText">
                                            <span>Bus Stop</span>
                                            <p>
                                                <%= post.bus %> m away
                                            </p>
                                        </div>
                                    </div>
                                    <div class="feature">
                                        <ion-icon name="fast-food-outline"></ion-icon>
                                        <div class="featureText">
                                            <span>Restaurant</span>
                                            <p>
                                                <%= post.restaurant %> m away
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <p class="title">Location</p>
                                <div class="mapContainer">
                                    <%- include('includes/smallmap', { data:[post]}) %>
                                </div>
                                <div class="buttons">
                                    <button>
                                        <ion-icon name="chatbox-ellipses-outline"></ion-icon>
                                        Send a Message
                                    </button>
                                    <button onclick="" style="background-color: #fece51' ">
                                        <ion-icon name="bookmark-outline"></ion-icon>
                                        Save the Place
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>







